<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/text_kva15"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <TextView
        android:layout_marginTop="57dp"
        android:layout_marginStart="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tesla"
        android:textAlignment="center" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputOfNoLoadLoss"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:hint="Enter tesla">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/NoLoadLoss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789.,$"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resistance"
        android:textAlignment="center" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputOfResistance"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:hint="Enter resistance">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/resistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789.,$" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:text="Submit" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Column spanning 2 rows -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data 1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- Third Column, first row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data 2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

            </LinearLayout>
        </TableRow>


       <!-- First row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Cell 1: Single Row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:text="7. Nominal Voltage"
                android:textColor="@android:color/black" />

            <!-- Cell 2: Will contain multiple rows -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

                <!-- Sub Row 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

                <!-- Sub Row 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

                <!-- Sub Row 4 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Cell 3: Will contain multiple rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

                <!-- Sub Row 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

                <!-- Sub Row 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

                <!-- Sub Row 4 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Row 4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Column spanning 2 rows -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data 1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- Third Column, first row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_cell_border">

                <!-- Sub Row 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data 2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/table_cell_border"
                    android:textColor="@android:color/black"/>

            </LinearLayout>
        </TableRow>



    </TableLayout>




</LinearLayout>

